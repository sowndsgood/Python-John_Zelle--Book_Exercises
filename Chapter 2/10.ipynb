   "source": [
    "Write a program that converts distances measured in kilometers to miles. \n",
    "One kilometer is approximately 0.62 miles."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "The distance is 3.1 miles\n"
     ]
    }
   ],
   "source": [
    "def main():\n",
    "    km=eval(input(\"Enter the distance in kilometers:\"))\n",
    "    miles=km*0.62\n",
    "    print(\"The distance is\",miles,\"miles\")\n",
    "\n",
    "main()"
   ]
  }
